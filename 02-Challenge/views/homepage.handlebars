<main class="homepage-container">
    {{#if posts.length}}
        {{#each posts}}
            <div class="homepage-post-box">
                <div class="post-header">
                    <h2>{{this.title}}</h2>
                </div>
                <p>{{this.content}}</p>
                <a href="/post/{{this.id}}" class="view-comments-button">View Comments</a>
            </div>
        {{/each}}
    {{else}}
        <p>No posts found.</p>
    {{/if}}
</main>
